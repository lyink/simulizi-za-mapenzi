rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (customize based on your auth setup)
    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Categories - Read by all, write by admin only
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Stories - Read by all, write by admin only
    match /stories/{storyId} {
      allow read: if true;
      allow write: if isAdmin();

      // Chapters subcollection
      match /chapters/{chapterId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Bible verses - Read by all, write by admin only
    match /bible/{bookId} {
      allow read: if true;
      allow write: if isAdmin();

      match /chapters/{chapterId} {
        allow read: if true;
        allow write: if isAdmin();

        match /verses/{verseId} {
          allow read: if true;
          allow write: if isAdmin();
        }
      }
    }

    // Users collection (optional - for user preferences, favorites, etc.)
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
